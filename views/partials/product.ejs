<div class="card mb-3" style="max-width: 400px;">
    <div class="row g-0">
        <div class="col-md-4">
            <img src="/img/<%=imageUrl%>" class="img-fluid">
        </div>
        <div class="col-md-8">
            <div class="card-body">
                <h5 class="card-title">
                    <a href="/products/<%=id%>"> <%=name%></a>
                   
                </h5>
                <p class="card-text">
                   <%=title %>
                </p>
            </div>
        </div>
    </div>
</div>         